[push]
	default = tracking

[alias]
  ci = commit
  co = checkout
  st = status
  df = diff
  pl = pull
  pu = push

[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[core]
  editor = /usr/local/bin/vim
